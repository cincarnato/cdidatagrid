                                <?php if ($column->getType() == "datetime"): ?>
                                    <?php if (is_a($data[$column->getName()], "\datetime")): ?>
                                        <?php echo $data[$column->getName()]->format($column->getFormatDatetime()); ?>
                                    <?php endif; ?>
                                <?php endif; ?>

