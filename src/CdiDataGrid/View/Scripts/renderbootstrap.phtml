                    <th style="text-align: center; font-size: 14px;">
                        <?php $name = $column->getName(); ?>
                <table>
                    <tr>
                    <td class="col-md-11"> <a  data-toggle="tooltip" title="<?php echo $column->getTooltip(); ?>" style="cursor: help">

